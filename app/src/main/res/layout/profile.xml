<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="37dp"
            android:id="@+id/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView

                android:id="@+id/signinback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="10dp"
                android:layout_gravity="center"

                android:layout_marginLeft="10dp" />


            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="22dp"
                android:textColor="#ADCCE2"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Back" />

        </LinearLayout>

        <customfonts.MyTextView
            android:id="@+id/signout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect"
            android:text="SIGNOUT"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginBottom="26dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <customfonts.MyTextView
            android:id="@+id/myTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score :"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="58dp"
            android:layout_above="@+id/signout"
            android:layout_toLeftOf="@+id/propic"
            android:layout_toStartOf="@+id/propic"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/scoreofprofile"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/background_light"
            android:layout_alignBaseline="@+id/myTextView2"
            android:layout_alignBottom="@+id/myTextView2"
            android:layout_alignLeft="@+id/propic"
            android:layout_alignStart="@+id/propic" />

        <ImageView
            android:id="@+id/propic"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/back"
            android:layout_centerHorizontal="true" />

        <customfonts.MyTextView
            android:id="@+id/usernameprof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/background_light"
            android:gravity="center"
            android:textSize="40dp"
            android:paddingBottom="40dp"
            android:textStyle="bold"
            android:layout_above="@+id/myTextView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Engscore"
            android:textSize="35dp"
            android:layout_below="@+id/scoreofprofile"
            android:layout_toRightOf="@+id/myTextView2"
            android:layout_toEndOf="@+id/myTextView2" />

    </RelativeLayout>

</FrameLayout>
